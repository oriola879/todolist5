<%- include('../includes/head.ejs') %>
<link rel="stylesheet" href="css/main.css" >
    <link rel="stylesheet" href="css/auth.css">

    
   
</head>
<body>
    
    <%- include('../includes/navigation.ejs') %>
    <main>
        <h1 class="h1">To-Do List </h1>
        <% if (errorMessage) {   %>
        <div class="user-message user-message-error"><%= errorMessage %></div>
        <% }%>
        
        <form class="login-form" action="/login" method="POST">
            <input type="hidden" name="_csrf" value="<%= csrfToken %>">
            <div class="form-control">
                <label for="email">E-Mail</label>
                <input type="email" name="email" id="email" value="<%= oldInput.email %>">
            </div>
            <div class="form-control">
                <label for="password">Password</label>
                <input type="password" name="password" id="password" value="<%= oldInput.password %>">
            </div>
            <button class="btn" type="submit">Login</button>
            <div class="centered">
                 <a href="/reset">Reset Password</a>
                </div>
            <p class="paragraph">You dont have an account ? <br>
                
             Please press Signup in the menu above, if you want to be registred.</p>
        </form>
    </main>
<%- include('../includes/end.ejs') %>